<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity5">

    <EditText
        android:id="@+id/eee3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"


        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:gravity="center"
        android:hint="Octal Number"
        android:textColorHint="#64ff33"
        />

    <Button
        android:id="@+id/bbb3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eee3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="34dp"
        android:text="Convert"
        android:textColor=" #f4d03f"
        android:background="#17a589 "
        />

    <TextView
        android:id="@+id/ttt3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bbb3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="66dp"

        android:layout_marginLeft="66dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="  "
        android:textColor="#000" />
    <Button
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/bl2"
        android:background="#64ff33"
        android:layout_marginTop="58dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@+id/bl2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="#64ff33"
        android:layout_marginBottom="-58dp" />

</RelativeLayout>