<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4">

    <EditText
        android:id="@+id/ee2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"


        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:hint="Binary Number"
        android:textColorHint="#64ff33"
        />

    <Button
        android:id="@+id/bb2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ee2"
        android:layout_alignStart="@+id/ee2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="78dp"
        android:text="Convert"
        android:background="#17a589 "
        android:textColor=" #f4d03f" />

    <TextView
        android:id="@+id/tt2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bb2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="75dp"

        android:layout_marginLeft="75dp"
        android:layout_marginTop="53dp"
        android:gravity="center"
        android:text="  "
        android:textColor="#000" />
    <Button
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/bl2"
        android:background="#64ff33"
        android:layout_marginTop="58dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@+id/bl2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="#64ff33"
        android:layout_marginBottom="-58dp" />

</RelativeLayout>